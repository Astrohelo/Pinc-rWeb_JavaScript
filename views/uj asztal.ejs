<%- include('header',{active: 'semmi'}) -%>

    <div class="container">
        <h2><% if (typeof asztal=== 'undefined' )  { %>
            Új asztal létrehozása
            <%} else { %>
            Asztal módosítása
            <%} %>
        </h2>
            <div class="col-lg-4 col-lm-6 col-12">
                <div style>
                    <form method="POST">
                        <div class="form-group">
                            <label for="nev">Asztal neve</label>
                            <input type="text" class="form-control" id="nev" name="nev"
                            aria-describedby="text" value="<%= (typeof asztal === 'undefined') ? '' : asztal.nev %>">
                        </div>
                        <div class="form-group">
                            <label for="ules">Ülések száma</label>
                            <input type="number" class="form-control" id="ules" name="ules" 
                            value="<%= (typeof asztal === 'undefined') ? '' : asztal.ules %>">
                        </div>

                        <input type="submit" class="btn btn-primary"  value="Kész"/>
                        <a class="btn btn-danger" href="/asztalok" role="button">Mégse</a>
                    </form>
                </div>
            </div>
    </div> 


<%- include('footer') -%>