<%- include('header',{active: 'semmi'}) -%>

    <ul class="list-group align-items-center">
      <% rendelesek.forEach(function(egyRendeles){ %>
        <li class="col-lg-4 col-md-6 col-12 list-group-item d-flex justify-content-between align-items-center">
          <%= egyRendeles.nev%>
          <div>
            <span class="badge badge-primary badge-pill"><%= egyRendeles.darab%></span>
            <a href="/rendeles/<%= asztal._id%>/del/<%= egyRendeles._id%>" class="btn-light"> <i class="fas fa-trash-alt"></i></a>
          </div>
          </a>
        
      <% }); %>
      <li class="col-lg-4 col-md-6 col-12 list-group-item d-flex justify-content-between align-items-center">
        <form method="POST">
          <div class="form-group">
            <input type="text" class="form-control" id="nev" name="nev" placeholder="Új étel">
          </div>
       
          <div class="form-group">
            <input type="number" class="form-control" id="darab" name="darab" placeholder="darab">
            </div>
            
            <input type="submit" class="btn btn-primary"  value="Új étel"/>
            <a class="btn btn-success" href="/rendeles/<%= asztal._id%>/delall" role="button">Fizetés</a>
        </form>
        
      </li>
    

      
    </ul>

<%- include('footer') -%>
